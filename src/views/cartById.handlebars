<article style="padding: 20px"></article>
    <div class="container text-center">
        <table class="table productCart table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">Quant</th>
                <th scope="col">Title</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Remove</th>
              </tr>
            </thead>
            <tbody>  
            {{#each products}}
              <tr>
                <th scope="row"> {{quantity}} </th>
                  <td> {{this.product.title}}  </td>
                  <td> <img src= {{this.product.thumbnails}} alt="" style="width: 10rem;"> </td>
                  <td> {{this.product.price}} usd </td>
                  <td> 
                    <button class="btn btn-danger" onclick="deleteProduct( '{{this.product._id}}', '{{../id}}')">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                      <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                    </svg>
                    </button>
                  </td>
                </th>
              </tr>
            {{/each}}
              <tr>
                <td colspan="3">
                  <button class="btn btn-outline-danger" onclick="deteleAll('{{id}}')">
                    Remove All
                  </button>
                </td>
                <td colspan="2">
                   <button class="btn btn-outline-success" onclick="purchase('{{id}}')">
                    Purchase
                  </button>
                </td>
              </tr>
            </tbody>
        </table>
    </div>
</article>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/javascript/cart.js"></script>